@model Model.EF.TAIKHOAN

@{
    ViewBag.Title = "Xoá tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h3 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive" style=" overflow-x: hidden;">
                <dl class="dl-horizontal">
                    <dt>
                        Họ và tên
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NHANVIEN.HoTenNV)
                    </dd>

                    <dt>
                        Quyền truy cập
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.QUYEN.TenQuyen)
                    </dd>

                    <dt>
                        Tên tài khoản
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TenTaiKhoan)
                    </dd>

                    <dt>
                        Mật khẩu
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MatKhau)
                    </dd>

                    <dt>
                        Trạng thái
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TrangThai)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Xoá" class="btn btn-success" />
                @Html.ActionLink("Trở lại", "Index", null, new { @class = "btn btn-danger" })
            </div>
                }
            </div>
        </div>
    </div>
</div>