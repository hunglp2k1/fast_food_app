@model IEnumerable<Model.EF.HOADON>

@{
    ViewBag.Title = "Danh sách Hoá đơn";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h3 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive" style=" overflow-x: hidden;">
                <div class="row">
                    <div class="col-sm-12 col-md-4">
                    </div>
                    <div class="col-sm-12 col-md-8">
                        <div id="" class="dataTables_filter">
                            @using (Html.BeginForm("Index", "Categories", FormMethod.Get, new { @class = "form-inline" }))
                            {
                                <div class="form-group">
                                    <label>Từ ngày: </label>
                                    <input name="NgayBatDauHD" class="form-control" value="@string.Format("{0:dd-MM-yyyy}", 01/01/2001)" type="date" />
                                </div>
                                <div class="form-group">
                                    <label>Đến ngày: </label>
                                    <input name="NgayKetThucHD" class="form-control" value="@string.Format("{0:dd-MM-yyyy}", 01/01/2001)" type="date" />

                                </div>
                                <button type="submit" class="btn btn-info" value=""><i class="fa fa-search" aria-hidden="true"></i></button>
                                <hr />
                            }
                        </div>
                    </div>
                </div>
                <hr />
                <table class="table">
                    <thead>
                        <tr style="background-color: var(--primary-color);color:white">
                            <th>
                                Họ & tên
                            </th>
                            <th>
                                Thời gian
                            </th>
                            <th>
                                Khuyến mãi
                            </th>
                            <th></th>
                        </tr>
                    <thead>
                    <tfoot>
                        <tr style="background-color: var(--primary-color);color:white">
                            <th>
                                Họ & tên
                            </th>
                            <th>
                                Thời gian
                            </th>
                            <th>
                                Khuyến mãi
                            </th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NHANVIEN.HoTenNV)
                                </td>
                                <td>
                                    @string.Format("{0:dd-MM-yyyy HH:mm:ss}", item.ThoiGian)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.KHUYENMAI.TenKM)
                                </td>
                                <td>
                                    <a class="btn btn-info" href="~/Admin/Order_Details/Index/@item.MaHD">Chi tiết hoá đơn</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                       

                </table>
            </div>
        </div>
    </div>
</div>
