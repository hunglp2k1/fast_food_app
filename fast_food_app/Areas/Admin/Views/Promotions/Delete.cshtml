@model Model.EF.KHUYENMAI

@{
    ViewBag.Title = "Xoá khuyến mãi";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h3 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive" style=" overflow-x: hidden;">
                <dl class="dl-horizontal">
                    <dt>
                        Tên khuyến mãi
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TenKM)
                    </dd>

                    <dt>
                        Mô tả
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MoTa)
                    </dd>

                    <dt>
                        Tỉ lệ giảm
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TiLeGiamGia)
                    </dd>

                    <dt>
                        Ngày bắt đầu
                    </dt>

                    <dd>
                        @string.Format("{0:dd-MM-yyyy}", Model.NgayBatDauKM)
                    </dd>

                    <dt>
                        Ngày kết thúc
                    </dt>

                    <dd>
                        @string.Format("{0:dd-MM-yyyy}", Model.NgayKetThucKM)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Xoá" class="btn btn-success" />
                        @Html.ActionLink("Trở lại", "Index", null, new { @class = "btn btn-danger" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>