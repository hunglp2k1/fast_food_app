@model IEnumerable<Model.EF.NHANVIEN>

@{
    ViewBag.Title = "Danh sách nhân viên";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h3 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive" style=" overflow-x: hidden;">
                <div class="row">
                    <div class="col-sm-12 col-md-4">
                        <p style="display:flex;justify-content:space-between;align-items:end">
                            <a href='@Url.Action("Create", "Staffs")'>
                                <span class="btn btn-outline-primary">Thêm mới</span>
                            </a>
                        </p>
                    </div>
                    <div class="col-sm-12 col-md-6">
                        <div id="" class="dataTables_filter">
                            @using (Html.BeginForm("Index", "Staffs", FormMethod.Get, new { @class = "form-inline" }))
                            {
                                <div class="form-group">
                                    <label>Tên nhân viên: </label>
                                    <input type="Text" class="form-control bg-light border-0 small .ml-1" value="@ViewBag.StaffName" name="staffName" placeholder="Nhập tên nhân viên...">
                                    <button type="submit" class="btn btn-info" value=""><i class="fa fa-search" aria-hidden="true"></i></button>
                                </div>
                                <hr />
                            }
                        </div>
                    </div>
                </div>
                <hr />
                <table class="table">
                    <thead>
                        <tr scope="col">
                            <th>
                                Họ và tên
                            </th>
                            <th>
                                Chức vụ
                            </th>
                            <th>
                                Số điện thoại
                            </th>
                            <th>
                                Ngày sinh
                            </th>
                            <th>
                                Giới tính
                            </th>
                            <th>
                                Hình ảnh
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr scope="col">
                            <th>
                                Họ và tên
                            </th>
                            <th>
                                Chức vụ
                            </th>
                            <th>
                                Số điện thoại
                            </th>
                            <th>
                                Ngày sinh
                            </th>
                            <th>
                                Giới tính
                            </th>
                            <th>
                                Hình ảnh
                            </th>

                            <th></th>
                        </tr>
                    </tfoot>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.HoTenNV)
                            <td>
                                @Html.DisplayFor(modelItem => item.CHUCVU.TenCV)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SDT)
                            </td>
                            <td>
                                @string.Format("{0:dd-MM-yyyy}", item.NgaySinh)
                            </td>
                            <td>
                                @if (item.GioiTinh == false)
                                {
                                    <span>Nữ</span>
                                }
                                else if (item.GioiTinh == true)
                                { <span>Nam</span>}
                                else
                                {
                                    <span>Giới tính khác</span>
                                }
                            </td>
                            <td>
                                <img src="@Url.Content(item.HinhAnh)" style="height:140px;width:180px;margin:10px" />
                            </td>
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { id = item.MaNV }, new { @class = "btn btn-success" })

                                @*@Html.ActionLink("Chi tiết", "Details", new { id = item.MaNV }, new { @class = "btn btn-info" })*@
                                @Html.ActionLink("Xoá", "Delete", new { id = item.MaNV }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
