@model Model.EF.NHANVIEN

@{
    ViewBag.Title = "Xoá thông tin nhân viên";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h3 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive" style=" overflow-x: hidden;">
                <dl class="dl-horizontal">


                    <dt>
                        Họ và tên
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.HoTenNV)
                    </dd>
                    <dt>
                        Chức vụ
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CHUCVU.TenCV)
                    </dd>
                    <dt>
                        Số điện thoại
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.SDT)
                    </dd>

                    <dt>
                        Ngày sinh
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NgaySinh)
                    </dd>

                    <dt>
                        Giới tính
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.GioiTinh)
                    </dd>

                    <dt>
                        Hình ảnh
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.HinhAnh)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Xoá" class="btn btn-success" />
                @Html.ActionLink("Trở lại", "Index", null, new { @class = "btn btn-danger" })
            </div>
                }
            </div>
        </div>
    </div>
</div>